<div class="section bg-dark text-light">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <h1>Hello Admin</h1>
                <h4>Add data to Database</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <form class="" action="/product/createproduct" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="prdname" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="prdname" placeholder="Enter Product Name"
                            name="name">
                    </div>
                    <div class="mb-3">
                        <label for="prdname" class="form-label">Product Description</label>
                        <input type="text" class="form-control" id="prdname" placeholder="Enter Product Name"
                            name="desc">
                    </div>
                    <div class="mb-3">
                        <label for="prdname" class="form-label">Product Price</label>
                        <input type="text" class="form-control" id="prdname" placeholder="Enter Product Name"
                            name="price">
                    </div>
                    <div class="mb-3">
                        <label for="qty" class="form-label">Product Quantity</label>
                        <input type="text" class="form-control" id="qty" placeholder="Enter Product Qty" name="qty">
                    </div>
                    <div class="mb-3">
                        <label for="image">Upload Image</label>
                        <input type="file" id="image" name="image" value="" required>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Save</button>
                        <a href="/" class="btn btn-primary">Back to Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="section bg-secondary text-light ">
    <div class="container">
        <div class="row">
            <h1>Product Info</h1>
        </div>
        <div class="row">
            <div class="col">
                <table class="table text-light">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Product desc</th>
                            <th scope="col">Price</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i = 1 %>
                        <% products.forEach( product =>{  %>
                        <tr>
                            <td> <%= i++ %> </td>
                            <td> <%= product.name %> </td>
                            <td> <%= product.desc %> </td>
                            <td> <%= product.price %> </td>
                            <td>
                                <a href="/product/editproduct/<%= product._id %>" class="btn btn-info">Edit</a>
                                <a href="/product/delproduct/<%= product._id %> " class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>


                </table>
            </div>
        </div>
    </div>
</div>
