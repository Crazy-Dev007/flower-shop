<div class="section bg-dark text-light">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Products</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="container-fluid d-flex flex-wrap gap-1">
                    <% items.forEach( item =>{  %>
                    <div class="card text-dark">
                        <img src="data:image/<%=item.img.contentType%>;base64,<%= item.img.data.toString('base64') %>"
                            class="card-img-top " alt="product Image" style="width:auto;height: 100px;">
                        <div class="card-body">
                            <h5 class="card-title"> <%= item.name %> </h5>
                            <p class="card-text"> <%= item.desc %> </p>
                            <p class="card-text"> Price <%= item.price %> Rs </p>
                            <a href="/product/getproduct/<%= item._id %>" class="btn btn-info">Details</a>
                        </div>
                    </div>
                    <% } ) %>
                </div>


            </div>
        </div>

    </div>
</div>