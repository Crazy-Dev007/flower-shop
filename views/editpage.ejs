<div class="section bg-dark text-light">
    <div class="container">
        <div class="row">
            <div class="col-8">

                <h4>Edit data to Database</h4>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form class="" action="/product/updateproduct/<%= item._id %>" method="post"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="prdname" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="prdname" placeholder="Enter Product Name"
                            name="name" value=" <%= item.name %> ">
                    </div>
                    <div class="mb-3">
                        <label for="prdname" class="form-label">Product Description</label>
                        <input type="text" class="form-control" id="prdname" placeholder="Enter Product Name"
                            name="desc" value=" <%= item.desc %> ">
                    </div>
                    <div class=" mb-3">
                        <label for="prdname" class="form-label">Product Price</label>
                        <input type="text" class="form-control" id="prdname" placeholder="Enter Product Name"
                            name="price" value=" <%= item.price %> ">
                    </div>
                    <div class=" mb-3">
                        <label for="qty" class="form-label">Product Quantity</label>
                        <input type="text" class="form-control" id="qty" placeholder="Enter Product Qty" name="qty"
                            value=" <%= item.qty %> ">
                    </div>
                    <div class=" mb-3">
                        <label for="image">Upload Image</label>
                        <input type="file" id="image" name="image"
                            value="data:image/<%=item.img.contentType%>;base64,<%= item.img.data.toString('base64') %>">
                    </div>
                    <div class=" mb-3">
                        <button class="btn btn-success">Save</button>
                        <a href="/" class="btn btn-primary">Back to Home</a>
                    </div>
                </form>
            </div>
            <div class="col">
                <img src="data:image/<%=item.img.contentType%>;base64,<%= item.img.data.toString('base64') %>"
                    alt="product image" width="500" height="500">
            </div>
        </div>
    </div>
</div>